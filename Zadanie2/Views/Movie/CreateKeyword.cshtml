@model WebApplication1.Models.Movies.KeywordCreateForm

@{
    ViewBag.Title = "Add New Keyword";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Add New Keyword</h1>

    <form asp-action="CreateKeyword" method="post" class="border p-4 shadow-sm rounded bg-light">
        <div class="form-group mb-3">
            <label asp-for="Keyword" class="form-label fw-bold">Keyword</label>
            <input asp-for="Keyword" name="Keyword" class="form-control" placeholder="Enter a keyword" />
            <span asp-validation-for="Keyword" class="text-danger"></span>
        </div>

        <div class="form-group text-center mt-4">
            <button type="submit" class="btn btn-primary px-5 py-2">
                <i class="bi bi-plus-circle"></i> Add Keyword
            </button>
        </div>
    </form>
</div>