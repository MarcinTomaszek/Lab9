@model System.Collections.Generic.List<WebApplication1.Models.Movies.KeywordsViewModel>
@{
    ViewData["Title"] = "Keywords";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mt-4">Keywords List</h1>

<div class="container mt-4">
    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
                <div class="card text-white bg-primary shadow-sm">
                    <div class="card-body text-center">
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Keyword)</p>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="text-center mt-4">
        <a class="btn btn-success btn-lg" asp-action="CreateKeyword">Add New Keyword</a>
    </div>
</div>